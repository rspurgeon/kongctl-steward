# GitHub Configuration
GITHUB_TOKEN=your_github_token_here
GITHUB_REPO=owner/repo  # e.g., Kong/kongctl or your test repo

# LLM Provider (choose one or configure both)
# Options: anthropic, openai
LLM_PROVIDER=anthropic

# Anthropic Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview

# Agent Configuration
DRY_RUN=true  # Set to false to enable actual actions
CONFIDENCE_THRESHOLD=0.80
MAX_ISSUES_PER_RUN=20
SCHEDULE_HOURS=4

# Vector Database
VECTOR_DB_PATH=./chroma_db

# State Management
STATE_FILE=./state/agent_state.json

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/steward.log
